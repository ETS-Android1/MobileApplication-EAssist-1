<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elderlymobileguide">


    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElderlyMobileGuide"
        >
        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Register" />
        <activity android:name=".Camera" />
        <activity android:name=".Planner" />
        <activity android:name=".profile" />
        <activity android:name=".editProfile" />
        <activity android:name=".Contacts" />
        <activity android:name=".Settings" />
        <activity android:name=".SearchApps"/>
        <activity android:name=".ClockDescription"/>
        <activity android:name=".CallDescription"/>
        <activity android:name=".MessageDescription"/>
        <activity android:name=".GalleryDescription"/>
        <activity android:name=".InternetDescription"/>
        <activity android:name=".YoutubeDescription"/>
        <activity android:name=".MapsDescription"/>
        <activity android:name=".CalendarDescription"/>
        <activity android:name=".EmailDescription"/>
        <activity android:name=".ContactDescription"/>
        <activity android:name=".SettingDescription"/>
        <activity android:name=".popup" android:theme="@style/Theme.CustomTheme">
        </activity>
        <activity android:name=".ContactPopup" android:theme="@style/Theme.CustomTheme">
        </activity>
        <activity android:name=".EmailPopup" android:theme="@style/Theme.CustomTheme">
        </activity>
        <activity android:name=".PlannerPopup" android:theme="@style/Theme.CustomTheme">
        </activity>
        <activity android:name=".AlarmPopup" android:theme="@style/Theme.CustomTheme">
        </activity>
        <activity android:name=".AppshortcutPopup" android:theme="@style/Theme.CustomTheme">
        </activity>

        <activity android:name=".Email">
        <intent-filter>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        </activity>
        <activity android:name=".Alarm"/>


    </application>

</manifest>